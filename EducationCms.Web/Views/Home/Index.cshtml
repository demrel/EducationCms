<!--News One Start-->
<section class="news-one">
    <div class="container">
        <div class="section-title text-center">
            <h2 class="section-title__title">@Model.Page?.Title4</h2>
            <span class="section-title__tagline">@Html.Raw(Model.Page?.Description4)</span>
        </div>
        <div class="row">
            @for (int i = 0; i < Model.Blogs.Count; i++)
