@model EducationCms.Web.Areas.admin.Models.Pages.PageModel

<h1 class="mt-2 mb-5">Update Page</h1>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" asp-controller="Page" asp-action="Update">
                    <div class="row">

                        <input type="hidden" class="form-control" asp-for="Id" >

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                            </div>
                        </div>



                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea type="text" class="form-control tinyMce" asp-for="Description" placeholder="Description"></textarea>
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Title2">Title second</label>
                                <input type="text" class="form-control" asp-for="Title2" placeholder="Title second">
                            </div>
                        </div>



                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Description2">Description second</label>
                                <textarea type="text" class="form-control tinyMce" asp-for="Description2" placeholder="Description second"></textarea>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Title3">Title third</label>
                                <input type="text" class="form-control" asp-for="Title3" placeholder="Title third">
                            </div>
                        </div>



                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Description3">Description third</label>
                                <textarea type="text" class="form-control tinyMce" asp-for="Description3" placeholder="Description third"></textarea>
                            </div>
                        </div>


                    </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>



