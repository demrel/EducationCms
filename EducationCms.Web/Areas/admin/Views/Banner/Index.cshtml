@model EducationCms.Web.Areas.admin.Models.Banners.BannerIndexVM
<h1 class="mt-2 mb-5">Banners</h1>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="" class="table order-listing">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Image</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Banners)
                            {
                                <tr>
                                    <td>
                                        <span style="font-weight:lighter">@item.TitleFirst</span><br />
                                        <span style="font-weight: lighter">@item.TitleSecond</span>

                                    </td>
                                    <td width="46%"><img src="~/images/banner/@item.Image?.Name" alt="Banner Image" /></td>

                                    <td>
                                        <a class="float-right m-1" href="@Url.Action("Update", "Banner",new { id = item.Id})"><i class="fas fa-pencil-alt"></i></a>
                                        <a class="float-right m-1" href="@Url.Action("Delete", "Banner",new { id = item.Id})"><i class=" fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/admin/js/shared/file-upload.js"></script>
}