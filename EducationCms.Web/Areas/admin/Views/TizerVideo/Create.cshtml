@model EducationCms.Web.Areas.admin.Models.TizerVideoPlaces.TizerVIdeoAddVM

<h1 class="mt-2 mb-5">Add Tizer</h1>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" asp-controller="TizerVideo" asp-action="Create" enctype="multipart/form-data">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Add.Title">Title </label>
                                <input type="text" class="form-control" asp-for="Add.Title" placeholder="Title">
                            </div>
                        </div>



                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Add.DescriptionFirst">Description First</label>
                                <textarea type="text" class="form-control" asp-for="Add.DescriptionFirst" placeholder="Description First"></textarea>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Add.DescriptionSecond">Description Second</label>
                                <textarea type="text" class="form-control" asp-for="Add.DescriptionSecond" placeholder="Description Second"></textarea>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Add.ContactText">Contact Text</label>
                                <textarea type="text" class="form-control" asp-for="Add.ContactText" placeholder="Contact Text"></textarea>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Add.PhoneNumber">Phone Number </label>
                                <input type="text" class="form-control" asp-for="Add.PhoneNumber" placeholder="Phone Number">
                            </div>
                        </div>

                        <div class="row m-1 mb-5">
                            <div class="col-sm-6">
                                <label asp-for="ImageRect">Image Up</label>
                                <input type="file" accept="image/*" placeholder="Banner Image" asp-for="ImageRect" class="file-upload-default" required>
                            </div>
                        </div>

                        <div class="row m-1 mb-5">
                            <div class="col-sm-6">
                                <label asp-for="ImageSquare">Image Down</label>
                                <input type="file" accept="image/*" placeholder="Banner Image" asp-for="ImageSquare" class="file-upload-default" required>
                            </div>
                        </div>



                    </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script src="~/admin/js/shared/file-upload.js"></script>
}
<!-- main-panel ends -->
