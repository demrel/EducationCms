@model EducationCms.Web.Areas.admin.Models.Blog.BlogIndexVM

<h1 class="mt-2 mb-5">Blogs</h1>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Category</th>
                                <th>Image</th>
                                <th>Visible</th>
                                <th class="float-right m-1">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Blogs)
                            {
                            <tr>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.CaegoryName
                                </td>
                                <td width="46%"><img src="~/images/posts/@item.Image" alt="Banner Image" /></td>
                                <td>
                                    <i class="fas fa-eye  @(item.IsActive? "text-success":"text-danger")"></i>
                                </td>

                                <td>
                                    <a class="float-right m-1" href="@Url.Action("Update", "Blog",new { id = item.Id})"><i class="fas fa-pencil-alt"></i></a>
                                    <a class="float-right m-1" href="@Url.Action("ActivateDeactivate", "Blog",new { id = item.Id})">

                                        <i class="fas  @(item.IsActive? "fa-eye-slash":"fa-eye")"></i>
                                    </a>
                                    <a class="float-right m-1" href="@Url.Action("Delete", "Blog",new { id = item.Id})"><i class=" fas fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

